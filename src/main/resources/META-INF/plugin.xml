<idea-plugin>

    <id>codeemoji-plugin</id>
    <name><![CDATA[codÆŽEmoji]]></name>
    <version>1.0.0-SNAPSHOT</version>
    <vendor email="fernando.opc@gmail.com" url="https://www.unibz.it">UNIBZ</vendor>

    <resource-bundle>CodeemojiBundle</resource-bundle>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="codeemoji.inlayhints.BadVariableNameSettings"/>
        <codeInsight.inlayProvider language="JAVA"
                                   implementationClass="codeemoji.inlayhints.BadVariableName"/>
        <codeInsight.inlayProvider language="JAVA"
                                   implementationClass="codeemoji.inlayhints.IsReturnsMoreThanABoolean"/>
        <codeInsight.inlayProvider language="JAVA"
                                   implementationClass="codeemoji.inlayhints.SetMethodReturns"/>
        <codeInsight.inlayProvider language="JAVA"
                                   implementationClass="codeemoji.inlayhints.GetMethodDoesNotReturn"/>
    </extensions>
</idea-plugin>